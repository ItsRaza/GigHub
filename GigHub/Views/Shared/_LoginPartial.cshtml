@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="notifications">
            <a href="#">
                <i class="glyphicon glyphicon-globe"></i>
                <span class="badge js-notification-count hide"></span>
            </a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @User.Identity.GetUserName()
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="@Url.Action("Mine","Gigs")">My Upcoming Gigs</a><br />
                <a class="dropdown-item" href="@Url.Action("Attending","Gigs")">Gigs I'm Going</a><br />
                <a class="dropdown-item" href="@Url.Action("Following","Gigs")">Artist I'm Following</a>
                <div class="dropdown-divider"></div>
                <a href="javascript:document.getElementById('logoutForm').submit()" style="color:#ff4342;">Log off</a>
            </div>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
